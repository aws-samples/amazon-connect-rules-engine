  function queueBehaviourChange(mode, queueBehaviourIndex)
  {
    var queueBehaviour = {
      weights: [],
      activation: 0
    };

    if (mode === 'edit')
    {
      queueBehaviour.weights =
        loadedRule.params.queueBehaviours[queueBehaviourIndex].weights;
    }

    queueBehaviour.type = $('#' + mode + 'BehaviourType').val().trim();
    queueBehaviour.activation = +$('#' + mode + 'BehaviourActivation').val().trim();

    if (queueBehaviour.type === 'Message')
    {
      var message = $('#' + mode + 'BehaviourMsgMsg').val().trim();

      if (message === '')
      {
        alert('Queue behaviour message is required');
        return;
      }

      queueBehaviour.message = message;
    }

    if (queueBehaviour.type === 'SMS')
    {
      var phone = $('#' + mode + 'BehaviourSMSNumber').val().trim();
      var message = $('#' + mode + 'BehaviourSMSMsg').val().trim();

      if (phone === '')
      {
        alert('Queue behaviour phone is required');
        return;
      }

      if (message === '')
      {
        alert('Queue behaviour message is required');
        return;
      }

      queueBehaviour.message = message;
      queueBehaviour.phone = phone;
    }

    if (queueBehaviour.type === 'DTMF')
    {
      var message = $('#' + mode + 'BehaviourDTMFOfferMessage').val().trim();
      var outputKey = $('#' + mode + 'BehaviourDTMFOutputStateKey').val().trim();

      if (message === '')
      {
        alert('Queue behaviour offer message is required');
        return;
      }

      if (outputKey === '')
      {
        alert('Queue behaviour output state key is required');
        return;
      }

      queueBehaviour.message = message;
      queueBehaviour.outputKey = outputKey;
    }

    if (queueBehaviour.type === 'UpdateState')
    {
      var outputKey = $('#' + mode + 'BehaviourUpdateStateKey').val().trim();
      var value = $('#' + mode + 'BehaviourUpdateStateValue').val().trim();

      if (outputKey === '')
      {
        alert('Queue behaviour state key is required');
        return;
      }

      queueBehaviour.outputKey = outputKey;
      queueBehaviour.value = value;
    }

    if (queueBehaviour.type === 'GOTO')
    {
      var index = $('#' + mode + 'BehaviourGOTOIndex').val().trim();

      if (index === '')
      {
        alert('Behaviour index is required');
        return;
      }

      var indexNum = +index;

      if (indexNum < 0)
      {
        alert('Behaviour index must be a positive integer');
        return;
      }

      var returnFlag = false;

      if ($('#' + mode + 'BehaviourGOTOReturn').is(':checked'))
      {
        returnFlag = true;
      }

      queueBehaviour.index = indexNum;
      queueBehaviour.returnFlag = returnFlag;
    }

    if (mode === 'add')
    {
      loadedRule.params.queueBehaviours.push(queueBehaviour);
    }
    else
    {
      loadedRule.params.queueBehaviours[queueBehaviourIndex] = queueBehaviour;
    }

    console.info(`Made rule with queue behaviour: ${JSON.stringify(loadedRule, null, 2)}`);

    renderQueueBehavioursUI();
  }

