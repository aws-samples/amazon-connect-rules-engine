          </div>
          <div class="col-3 text-right">
            <i class="fas fa-pen text-primary" style="cursor: pointer;" title="Edit behaviour" onClick="editQueueBehaviour(${i});"></i>
            <i class="fas fa-plus-circle text-success" style="cursor: pointer;" title="Create weight" onClick="createWeightBehaviour(${i})"></i>
            <i class="fa fa-chevron-up mx-1" style="cursor: pointer;" title="Move behaviour up" onClick="moveBehaviourUp(${i});"></i>
            <i class="fa fa-chevron-down mx-1" style="cursor: pointer;" title="Move behaviour down" onClick="moveBehaviourDown(${i});"></i>
            <i class="fas fa-times-circle text-danger mx-1" style="cursor: pointer;" title="Delete behaviour" onClick="deleteBehaviour(${i}, -1);"></i>
          </div>
        </div>`;

      var keys = Object.keys(loadedRule.params.queueBehaviours[i]);

      keys.forEach(key =>
      {
        if (key !== 'type' && key !== 'activation' && key !== 'weights')
        {
          html += `<div style="padding-left: 55px;" class="pr-5" >
            <p class="my-1">
              <i class="fas fa-chevron-right mr-2 text-muted"></i>
              ${key} = ${Handlebars.escapeExpression(loadedRule.params.queueBehaviours[i][key])}
            </p>
          </div>`;
        }
      });

      for (var w = 0; w < loadedRule.params.queueBehaviours[i].weights.length; w++)
      {
        var weight = loadedRule.params.queueBehaviours[i].weights[w];

        html += `<div style="padding-left: 50px;">
          <p class="my-1">
            <i class="fas fa-times-circle text-danger mr-2" title="Delete weight" style="cursor: pointer;" onClick="deleteBehaviourWeight(${i}, ${w});"></i>
                Weight: ${Handlebars.escapeExpression(weight.field)}
                ${Handlebars.escapeExpression(weight.operation)}
                ${Handlebars.escapeExpression(weight.value)}
                = ${Handlebars.escapeExpression(weight.weight)}
          </p>
        </div>`;
      }

      html += `</div>`;
    }

    $('#queueBehaviours').html(html);
  }

  function copyQueueBehaviours()
  {
    const type = "text/plain";
    var json = JSON.stringify({
      queueBehaviours: loadedRule.params.queueBehaviours
    }, null, 2);
    console.info(`Copying to clipoard: ${json}`);
    const blob = new Blob([json], { type });
    const data = [new ClipboardItem({ [type]: blob })];

    navigator.clipboard.write(data).then(
      () => {
        successToast(`Copied ${loadedRule.params.queueBehaviours.length} behaviours to clipboard`);
      },
      () => {
        errorToast('Failed to copy behaviours to the clipboard');
      }
    );
  }

  function pasteQueueBehaviours()
  {
    navigator.clipboard
      .readText()
      .then(clipText => {

        console.info(`Got clipboard behaviours: ${clipText}`);
        try
        {
          var newBehaviours = JSON.parse(clipText);

          if (newBehaviours.queueBehaviours !== undefined &&
            Array.isArray(newBehaviours.queueBehaviours) &&
            newBehaviours.queueBehaviours.length > 0)
          {
            loadedRule.params.queueBehaviours = newBehaviours.queueBehaviours;
            renderQueueBehavioursUI();
            successToast(`Replaced existing queue behaviours!`)
          }
          else
          {
            errorToast('Clipboard did not contain queue behaviours');
          }
        }
        catch (error)
        {
          errorToast('Failed to paste queue behaviours');
        }
      });
  }

  $('#addBehaviourType').on('change', function (e)
  {
    behaviourTypeChanged('add', $('#addBehaviourType').val());
  });

  $('#editBehaviourType').on('change', function (e)
  {
    behaviourTypeChanged('edit', $('#editBehaviourType').val());
  });

  function behaviourTypeChanged(mode, newBehaviourType)
  {
    $('.behaviourPanel').hide();

    if (newBehaviourType !== '')
    {
      $('#' + mode + 'Behaviour' + newBehaviourType).show();
    }
  }

  function createWeightBehaviour(index)
  {
    $('#behaviourWeightsToEdit').val(index);

    $('#queueBehaviourWeightsModal').modal();
  }

  /**
   * Create a new weight on a behaviour
   */
  $('#createQueueBehaviourWeightForm').submit(async function(e)
  {
    e.preventDefault();

    var behaviourToEdit = $('#behaviourWeightsToEdit').val().trim();
    var field = $('#queueBehaviourWeightField').val().trim();
    var operation = $('#queueBehaviourWeightOperation').val().trim();
    var value = $('#queueBehaviourWeightValue').val().trim();
    var weight = $('#queueBehaviourWeightWeight').val().trim();

    var pattern = /^([0-9A-Za-z\.\_\-]?){2,256}$/;

    if (!field.match(pattern))
    {
      alert('Field names must contain only characters and numbers, dots hyphens and underscores');
      return;
    }

    if (operation !== 'isnull' &&
        operation !== 'isnotnull' &&
        operation !== 'isempty' &&
        operation !== 'isnotempty')
    {
      if (value === '')
      {
        alert('Value is required for this operation');
        return;
      }
    }

    var queueBehaviour = loadedRule.params.queueBehaviours[behaviourToEdit];

    if (queueBehaviour.weights === undefined)
    {
      queueBehaviour.weights = [];
    }

    queueBehaviour.weights.push({
      field: field,
      operation: operation,
      value: value,
      weight: weight
    });

    $('#queueBehaviourWeightsModal').modal('hide');

    renderQueueBehavioursUI();

    successToast('Created new behaviour weight');
  });

  function deleteBehaviourWeight(behaviourIndex, weightIndex)
  {
    var queueBehaviour = loadedRule.params.queueBehaviours[behaviourIndex];

    queueBehaviour.weights.splice(weightIndex, 1);

    renderQueueBehavioursUI();

    successToast('Deleted weight behaviour');
  }

  function pickMessagePrompt(promptId, editorId)
  {
    var selectedPrompt = $(promptId).val().trim();

    if (selectedPrompt !== '')
    {
      $(editorId).val('prompt:' + selectedPrompt);
      successToast('Using selected prompt');
    }
  }


</script>
